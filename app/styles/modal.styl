@import 'nib'
.fade
  opacity:0;
  transition:opacity 0.15s linear;

.fade.in
  opacity:1;

.modal-backdrop {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 10040;
  background-color: #000000;
  background: -webkit-radial-gradient(50% 50%, ellipse closest-corner, rgba(0,0,0,0.3) 1%, rgba(0,0,0,0.625) 100%);
}
.modal-backdrop.fade {
  opacity: 0;
}
.modal-backdrop,
.modal-backdrop.fade.in {
  opacity: 0.45;
}
.modal {
  position: fixed;
  top: 10%;
  left: 50%;
  z-index: 10050;
  width: 560px;
  margin-left: -280px;
  background-color: #ffffff;

  border-radius 6px
  border: 1px solid #666
  box-shadow: 0 7px 27px rgba(0,0,0,0.35)

  background-clip: padding-box;
  outline: none;
}
.modal.fade {
  transform: scale(2);
  opacity: 0;
  transition: all 0.25s;
  //transition: opacity .1s ease-out, top .2s cubic-bezier(0.25, 0.1, 0.25, 1)
  //top: 0%;
}
.modal.fade.in {
  transform: scale(1);
  opacity: 1;
  top: 10%;
}

.modal
  .inner
    padding: 32px 40px
    h2, h3
      font-weight bold
    h2
      font-size 24px
      margin-bottom: 8px
    h3
      margin-bottom: 16px
      margin-top: 24px
    li
      overflow hidden
      margin-bottom 4px
      .left-col
        float left
        width: 30%
      .right-col
        float left
        width: 70%
    .key.code
      display: inline-block
      min-width: 24px
      padding: 5px 6px
      font-size: 14px
      line-height: 1
      color: #eee
      text-align: center
      text-shadow: 0 1px 0 rgba(0,0,0,0.5)
      text-transform: capitalize
      background-color: #333
      border-radius: 3px
      box-shadow: inset 0 -2px 0 #111
      .single
        width: 80px

    ul.stats
      font-size 13px
      margin-left 0
      margin-bottom 16px
      li
        overflow hidden
        .key
          float left
          width 100px
          font-weight bold
        .value
          float left
    .button
      display: block
      margin-bottom: 8px
    .footer
      margin-top 24px
      padding-top: 8px
      border-top: 1px solid #e2e6e7
      .license
        font-size 13px

