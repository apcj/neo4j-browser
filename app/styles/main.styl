.edit-in-place
  .edit-in-place-input
    border: none
    font-family: "Helvetica Neue",Helvetica,Arial,sans-serif
    padding: 6px 8px
    font-size: 13px
    border-radius: 3px
    width: 187px
  .edit-in-place-trigger
