$primary-color = #1abc9c
$topbar-bg = #34495e
$body-font-color = #34495e
$table-head-font-color = $body-font-color
$table-row-font-color = $body-font-color
$table-head-bg ?= #eff0f2

@import 'foundation'
@import 'nib'
global-reset()

size(w, h)
  width: w
  height: h

html, body
  margin 0
  padding 0

*
  outline: none

body
  font: 16px Helvetica, Arial, sans-serif
  background: #ECF0F1
  color: #34495e

#page-container
  background-color: #eee
  position: absolute
  left: 0
  right: 0
  bottom: 0

#query-bar
  background-color: #BDC3C7
  position: absolute
  top: 0
  left: 200px
  right: 200px
  height: 100px
  padding 25px 39px 0

  input
    margin 0

#query-view-container
  background-color: #fff
  position absolute
  top: 100px
  bottom: 0
  left: 0
  right: 0

  #view-sidebar
    //background-color: #ccc
    position: absolute
    top: 0
    left: 0
    bottom: 0
    width: 200px

  #view-active
    position: absolute
    top: 0
    left: 200px
    bottom: 0
    right: 200px

  #view-history
    //background-color: white
    position: absolute
    top: 0
    right: 0
    width: 200px
    bottom: 0


path.link {
  fill: none;
  stroke: #34495E;
  stroke-width: 2px;
}

circle {
  fill: #3498DB;
  stroke: #fff;
  stroke-width: 1.5px;
}

text {
  fill: #000;
  font: 10px sans-serif;
  pointer-events: none;
}
