@import 'variables'
@import 'nib'
@import 'mixins'

html, body
  margin 0
  padding 0
  -webkit-font-smoothing: antialiased

*
  word-wrap: break-word
  outline: none

body
  font: 13px 'Helvetica Neue', Helvetica, Arial, sans-serif
  background: #EEE
  color: #333
  stretch()
  overflow: hidden

h1
  image: '/images/logo.png' 22px 28px
  background-repeat: no-repeat
  background-position: 17px 14px
  padding-left: 30px

a
  color: color-link
  cursor: pointer
  &:hover
    color: color-link-hover
    text-decoration: none

.help
  [help-topic]
    border: 1px solid #DADADA
    border-radius: 3px
    padding: 0 4px
    background-color: #F8F8F8
    margin-bottom: 5px
    display: inline-block
    line-height: 18px

[play-topic], [help-topic]
  &:before
    font-family: FontAwesome
    padding-right: 4px

[play-topic]
  &:before
    content: "\f144"

[help-topic]
  &:before
    content: "\f05a"

table.data
  width: 100%
  margin-bottom: 0
  thead tr th, tfoot tr th
    text-align: left
    height: middlebar-height
    font-weight: bold
    padding: 0 horizontal-padding
    line-height: middlebar-height
    border-bottom: 1px solid table-color-border-color
  tbody tr td, tr td, tfoot tr td
    border-bottom: 1px solid table-color-border-color
    vertical-align: top
    line-height: 26px
    padding: 0 horizontal-padding
  tbody tr
    background-color: #fff
    &:hover
     background-color: #F8F8F9

ul
  list-style-type none
  margin: 0

form
  margin: 0

blockquote, blockquote p
  font-size: 17px; line-height: 24px; color: #777;

blockquote
  margin: 0 0 20px;
  padding: 9px 0px

p.lead
  font-size 16px
  margin-bottom 0em

.status-bar-wrapper
  height: 68px
  display: none
.status-bar
  height: middlebar-height
  line-height: middlebar-height
  color: rgb(120, 129, 133)
  border-top: 1px solid #E7E9EB
  padding-left: horizontal-padding
  font-size: 13px
  position: relative
  background-color: #FFF
  .btn-group
    absolute: top 3px right 12px

  .popover.bottom
    line-height: 22px
    .arrow:after
      border-bottom-color: #f7f7f7
      border-top-width: 0
  .details
    margin-top: -4px
    margin-left: 12px
  .updated-code
    float:right
    margin-right horizontal-padding
  &.error
    color: color-error
  [class^="icon-"]
    margin-right: 6px
  i[class^="icon-"]
    margin: 0
  .icon-ok
    color: color-success

.fullscreen-container
  position: absolute
  left: 0
  top: 0
  bottom: 0
  right: 0
  background-color: #fff
  z-index: 5000
  .code-bar
    padding: 0 16px
    .actions
      display: none
    a.close-fullscreen
      display: block
      absolute: top 9px right 16px
      color: #9B9DA2
      font-size: 20px
  a.icon-download-alt
    color: #9B9DA2
    absolute: top 9px right 50px
    font-size: 22px
  .view-result-graph
    absolute: top middlebar-height bottom middlebar-height
    width: 100%
    background-color: #F8F9FB
  .status-bar
    absolute: bottom 0
    width: 100%
    .btn-group
      absolute: bottom 0 right 12px
  neo-table
    position: absolute
    top: 39px
    overflow-y: scroll
    left: 0
    right: 0
    bottom: 39px

.view-keys
  padding: 10px
  h4
    margin-top: 0
  li
    overflow hidden
    margin-bottom 4px
    .left-col
      float left
      width: 20%
    .right-col
      float left
      width: 80%
  .key.code
    display: inline-block
    min-width: 24px
    padding: 5px 6px
    font-size: 14px
    line-height: 1
    color: #eee
    text-align: center
    text-shadow: 0 1px 0 rgba(0,0,0,0.5)
    text-transform: capitalize
    background-color: #333
    border-radius: 3px
    font-weight: bold;
    font-size: 12px;
    box-shadow: inset 0 -2px 0 #111
    .single
      width: 80px

//
// Bootstrap overrides
//////////////////////

.navbar-inverse .navbar-inner
  background: linear-gradient(top, #333, #181818)

.navbar-inner
  padding-left: horizontal-padding
  padding-right: horizontal-padding

.navbar .brand
  color: #fff
  font-weight: bold
  line-height: 18px
  padding-top: 8px
  padding-left: horizontal-padding
  margin-top: -2px

.navbar .nav .dropdown-toggle .caret
  margin-top: 27px

.navbar .nav > li > a
  padding-top: 0
  padding-bottom: 0
  line-height: topbar-height - 2px

.navbar .nav > li:last-child > a
  padding-right: 0

.icon-margin-right
  margin-right: 0.5em

.icon-margin-left
  margin-left: 0.5em

select
  margin-bottom: 0

.hero-unit
  padding 2em 60px 1em 60px
  margin-top 1em

.dl-horizontal
  dt
    width 120px
  dd
    margin-left 140px

.table-help
  tr
    vertical-align top

.table-help
  th
  td
    border 0

.table-help
  th
    text-align right
    margin 0
    padding-left 0

.table td.wrapped
  word-break break-all

a.badge, a.label
  color: #fff
  &:hover
    color: color-success

.label.relationship
  border-radius: 2px

/////
#error
  position: fixed
  top: 0
  height: 72px
  left: 80px
  right: 0
  background-color: color-error
  z-index: 100;
  display: none
  line-height: 73px
  color: #fff
  padding-left :24px
  font-size: 15px
  font-weight: bold
.connection-error
  #error
    display: block

#main
  position: absolute
  overflow: hidden
  top: 0
  bottom: 0
  left: nav-width
  right: 0
  z-index: 10
  background-color: #E7E9EB
  transist all

  .intro
    stretch()
    display: none
    text-align: center
    position: absolute
    text-align: center
    background: url(/images/intro.png) 50% 48% no-repeat

  footer
    bottom: 22px
    color: #A0AAB1
    font-size: 15px
    left: 0
    line-height: 23px
    padding: 0 24px
    position: absolute
    right: 0
    text-align: center
    text-shadow: 0 2px 0px #E7E9EB

.update-button
  position:absolute
  bottom: 16px
  right: 16px

// UI states
.show-drawer
  #main
    left: (drawer-width + nav-width);

.alert-box.global
  margin-bottom: 0
  .close
    display: none

.expand-editor .view-editor
    bottom: 0

