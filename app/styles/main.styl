.edit-in-place
  .edit-in-place-input
    border: none
    font-family: "Helvetica Neue",Helvetica,Arial,sans-serif
    border-radius: 3px
    padding: 2px 8px
    font-size: 13px
    width: 157px
    position: relative
    top: -1px
    font-weight: bold
  .edit-in-place-trigger
