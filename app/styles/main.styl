horizontal-padding = 16px
history-width = 300px
editor-height = 140px
topbar-height = 41px
toolbar-height = 41px
middlebar-height = 39px

$primary-color = #1abc9c
$alert-color = #E13329
$topbar-bg = #222
$body-font-color = #34495e
$table-head-bg = #F5F5F5
$table-head-font-color = #2E383C
$table-head-padding = 0 horizontal-padding
$table-head-font-weight = bold
$table-head-font-size = 13px
$table-row-padding = 0 horizontal-padding
$table-row-font-color = #748287
$table-row-font-size = 13px
$table-even-row-bg = #F7f8f8
$topbar-title-font-size = 20px
$topbar-title-weight = normal
$topbar-height = topbar-height
$topbar-link-font-size = 15px
$topbar-link-hover-lightness = 0
$topbar-dropdown-bg = $primary-color

@import 'nib'
@import 'modal'
global-reset()

size(w, h)
  width: w
  height: h

stretch()
  position absolute
  top 0
  left 0
  right 0
  bottom 0

transist(property)
  transition: property 0.4s
  transition-timing-function: cubic-bezier(0.694, 0.0482, 0.335, 1)

html, body
  margin 0
  padding 0
  -webkit-font-smoothing: antialiased

*
  outline: none

body
  font: 13px 'Helvetica Neue', Helvetica, Arial, sans-serif
  background: #222
  color: #34495e
  stretch()
  overflow: hidden

h1
  image: '/images/logo.png' 22px 28px
  background-repeat: no-repeat
  background-position: 17px 14px
  padding-left: 30px

table
  width: 100%
  th
    border-bottom: 1px solid #ECF0F1
  thead tr th, tfoot tr th
    height: middlebar-height
    font-weight: bold
  tbody tr td, tr td, tfoot tr td
    vertical-align: top
    line-height: 1.3 * $table-row-font-size
    padding: ((middlebar-height - 1.3 * $table-row-font-size) / 2) horizontal-padding

@keyframes spinning
  from
    transform: rotate(0deg)
    transform-origin: 50% 50%
  to
    transform-origin: 50% 50%
    transform: rotate(360deg)
.spin
  animation: spinning 1.5s linear infinite

.CodeMirror
  -webkit-font-smoothing: initial
  background-color: transparent !important
  font-size: 16px !important
  font-family: Inconsolata, Monaco, Menlo, 'Ubuntu Mono', 'Droid Sans Mono', Consolas, monospace !important
  line-height: 19px !important
  margin: 18px horizontal-padding 18px 10px
  pre
    padding: 0 !important
.CodeMirror-lines
  padding: 0 !important
.CodeMirror-gutters
  border: none !important
  border-right: 9px solid #fff !important
  background-color: #fff !important
.CodeMirror-linenumber
  padding: 0 !important
  color: #ccc !important
.CodeMirror
  height: auto !important
.CodeMirror-scroll
  overflow-x: auto !important
  max-height: 140px

// Bootstrap overrides

.navbar-inverse .navbar-inner
  background: linear-gradient(top, #333, #181818)

.navbar-inner
  padding-left: horizontal-padding
  padding-right: horizontal-padding

.navbar .brand
  color: #fff
  font-weight: bold
  line-height: 18px
  padding-top: 8px
  padding-left: horizontal-padding

.navbar .nav > li:last-child > a
  padding-right: 0

.icon-margin-right
  margin-right: 0.5em

.icon-margin-left
  margin-left: 0.5em

/////

nav
  .title
    height: 57px;
    .app-name
      padding-top: 7px
      font-size: 23px
      font-weight bold
      line-height: 27px
    .edition
      font-size: 11px
      line-height: 12px
      //text-transform: uppercase
      font-weight bold
      opacity: 0.7
  .has-dropdown
    position relative
  .dropdown, .top-bar-section .dropdown
    background-color: #fff
    padding 16px
    box-shadow: 0 7px 27px rgba(0,0,0,0.3)
    border-radius 6px
    position: absolute;
    top: topbar-height + 10px
    left: 16px
    width: 280px
    border: 1px solid rgba(0,0,0,0.27)
    z-index 10000
    h3
      font-size: 21px
      font-weight: bold
      border-bottom: 1px solid #e2e6e7
      padding-bottom 16px
      margin-bottom 16px
      .version
        font-size: 13px
        opacity 0.7
    li a
      color: $body-font-color
      background: none
      &:hover
        background-color: #ddd

.top-bar-section li a:not(.button)
  background: linear-gradient(top, #333, #181818)

#history
  color: #fff
  position: absolute
  top: $topbar-height
  right: left
  width: history-width
  bottom: 0
  background-color: #3A4549
  text-shadow: rgba(0, 0, 0, 0.4) 0px 1px 0px
  h3, h4, h5
    position: relative
    color: #fff
    font-weight: bold;
    padding: 0 horizontal-padding;
    margin: 0;
  h3
    position: relative
    font-size: 17px
    line-height: toolbar-height
    padding-left 46px
    a
      color: #fff
  .icon-collapse
    absolute: top 8px left 14px
    font-size: 24px
  h4
    background-color: #2E383C
    line-height: 39px;
    font-size: 13px
    text-transform: uppercase;
    .icon-plus
      absolute: top 11px right 15px
      font-size: 16px
  h5
    font-size: 12px
    line-height: 39px;
    font-size: 13px
    padding-left: 42px
    border-bottom: 1px solid #465054
    color #9AA7AC
    font-weight: bold
    &:hover
      color #fff
    &.folder
      cursor: pointer
      .icon-folder-open, .icon-folder-close
        absolute: top 13px left 17px
    .icon-trash
      absolute: top 11px right 17px
      font-size: 16px


  ul
    li
      background-color: #3a4549
      padding: 11px horizontal-padding 11px 42px
      position: relative
      border-bottom: 1px solid #465054
      &:after
        content: ' '
        stretch()
        background-color: #C9F9A1
        width 0
        opacity 0
      &.active
        &:after
          width 4px
          opacity 1
        background-color: #404C50
        .contents a
          //font-weight bold
          color: #fff
          .meta
            font-weight normal
      &:hover
        .contents a
          color: #fff
      .background
        stretch()
      [class^="icon-"]
        font-size: 16px
      .icon-star, .icon-star-empty
        z-index 2
        absolute: right 16px top 12px
      .icon-play-sign, .icon-spinner
        z-index 2
        absolute: left 15px top 12px
      .contents
        position relative
        z-index 1
        line-height 1
        a
          color #9AA7AC
          font-size 13px
          width: 214px
          display: inline-block
          line-height: 1.4
        .meta
          color: #728187
          font-size: 12px
          margin-top 2px
          .icon
            relative: top 1px
            margin-right: 4px
  ul.indented
    li
      padding-left: 68px
      .refresh
        left 42px
  ul.starred li .star
    background-image: url('/images/icon-starred.png')
    &:hover
      background-image: url('/images/icon-starred_hover.png')

  .file-drop-area
    background-color: #555
    min-height: 50px
    &.active
      background-color: #fff
#views
  position: absolute
  overflow: hidden
  top: topbar-height
  bottom: 0
  left: 0
  right: 0
  //box-shadow: rgba(0,0,0,0.25) -2px 0 11px;
  z-index: 10
  transist all
  #view-background
    stretch()
    background-color: #222
    transist all

.view
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0
  &.anim
    transform: scale(0.9, 0.9)
  &.outside
    transform: translate(0, -1000px)
  &.enter
    transform: translate(0, 0)

  .view-toolbar
    position: absolute;
    top: 0
    left: 0
    right: 0
    height: toolbar-height
    line-height: toolbar-height
    background: green
    color: #9EA4A6
    background-color: #FAFBFB
    border-bottom: 1px solid #E2E6E7
    padding: 0 horizontal-padding
    ul.inline-list
      margin-bottom 0
      margin-top 9px
      li
        line-height: 29px
        font-size: 13px
        &.divider
          border-left: 1px solid #DBE0E1

  .view-editor
    background-color: #fff
    border-right: 1px solid #E2E6E7
    position: absolute;
    top: toolbar-height
    left: 0
    right: 0
    height: editor-height
    border-bottom: 1px solid #E2E6E7
    transist width
    .icon-play-sign
      font-size: 42px
      absolute: top 16px right 16px
      z-index: 10000
    .handle
      position: absolute
      size 56px 41px
      top: 7px
      right: -40px
      background-image: url('/images/handle.png')
      z-index: 1000
      transist all
      &:after
        content: ' '
        position: absolute
        size 9px 14px
        top: 14px
        right: 18px
        background-image: url('/images/triangle.png')
        z-index: 1000
        transist all

  .view-result
    position: absolute;
    top: editor-height + toolbar-height
    bottom: 0
    right: 0
    left: 0
    transist left
    background: #F5F6F6 url('/images/background-pending.png') 50% 50% no-repeat
    z-index: 10
    &.error
      background-image: url('/images/background-error.png')
    .status-bar
      overflow: hidden
      position: absolute;
      top: 0
      height: middlebar-height
      line-height: 38px
      left: 0
      right: 0
      color: rgb(120, 129, 133)
      background-color: #FFF
      border-bottom: 1px solid #E2E6E7
      padding-left: horizontal-padding
      font-size: 13px
      .updated-code
        float:right
        margin-right horizontal-padding
      &.error
        color: #E74C3C
      [class^="icon-"]
        margin-right: 6px

      /*
      .icon
      absolute: top 16px
      z-index: 10
      &.expand
        right: 16px
      &.download
        right: 16px
      */
    .split-pane
      position: absolute
      top: 39px
      left: 0
      right: 0
      bottom: 0
      height: 100%
      transist: all
      &.hidden
        height: 0
      .view-result-graph
        background-color: #F5F6F6
        position: absolute
        top: 0
        left: 0
        right: 0
        height: 50%
        //transist height
        .icon-table
          font-size: 24px
          absolute: bottom 57px right horizontal-padding
      .view-result-table
        border-top: 1px solid #E2E6E7
        background-color: #f7f7f7
        position: absolute
        bottom: 0
        left: 0
        right: 0
        height: 50%
        //transist height
        a.icon-download-alt
          absolute: top 8px right horizontal-padding*2+20
          font-size: 24px
          &.alone
            right: horizontal-padding
        a.icon-collapse
          absolute: top 7px right horizontal-padding
          font-size: 24px
        .view-result-table-scroll
          position: absolute
          top: 0
          left: 0
          right: 0
          bottom: 0
          display: block;
          overflow: scroll

.update-button
  position:absolute
  bottom: 16px
  right: 16px

// UI states

.hide-editor .view
  .view-editor
    display: none
  .view-result
    top: 0 !important

.expand-graph .view .view-result
  .view-result-graph
    height: 100%
  .view-result-table
    height: 0

.expand-table .view .view-result
  .view-result-graph
    height: 0
  .view-result-table
    height: 100%

.show-history
  .top-bar
    //margin-right: history-width
  #views, #view-background
    left: (history-width);
    //right: history-width;
    .view-editor
      .handle
        opacity: 0

#query-bar
  background-color: #edeff1
  position: absolute
  top: 0
  left: 0
  right: 0
  height: 92px
  padding 25px horizontal-padding 0

  input
    margin 0

textarea, input[type="text"], input[type="password"], input[type="datetime"], input[type="datetime-local"], input[type="date"], input[type="month"], input[type="time"], input[type="week"], input[type="number"], input[type="email"], input[type="url"], input[type="search"], input[type="tel"], input[type="color"], .uneditable-input
  border: 2px solid #bdc3c7;
  color: $body-font-color;
  font-size: 16px;
  padding: 8px 5px;
  height: 40px;
  text-indent: 6px;
  border-radius: 6px;
  box-shadow: none;
  transition: border .25s linear, color .25s linear;
  -webkit-backface-visibility: hidden;
  &:focus
    border-color: #1abc9c;
    box-shadow: none;
  &.fixed-font
    font-family: Monaco, Menlo, 'Ubuntu Mono', 'Droid Sans Mono', Consolas, monospace;

.alert-box.global
  margin-bottom: 0
  .close
    display: none


.graph-viz {
  float: left;
  width: 500px;
}

path.link {
  fill: none;
  stroke: #7F8C8D;
  stroke-width: 2px;
}

circle {
  fill: #3498DB;
  stroke: #fff;
  stroke-width: 0;
}

text {
  fill: #000;
  font: 10px sans-serif;
  pointer-events: none;
}

circle.node {
  cursor: pointer;
  stroke: #ff;
  stroke-width: 2px;
}

line.link {
  fill: none;
  stroke: #BDC3C7;
  stroke-width: 1.5px;
}

.CodeMirror.cm-s-neo
  color: #2E383C
  .cm-keyword
    color: #3498DB
  .cm-atom
    color: #9B59B6
  .cm-node
    color: #E74C3C
  .cm-string
    color: #E67E22
  .cm-variable
    color: #1ABC9C

marker
  fill: #BDC3C7

text
  fill: #fff
  .faded
    fill: #333

.node
  transist all
  circle
    fill: #1ABC9C
    stroke-width: 2px;
    stroke: #fff
    transform: scale(1.0, 1.0)
    transist all
  &:hover
    cursor: pointer
    circle
      transform: scale(1.2, 1.2)
      fill: #C7F0E6

.node.faded
  circle
    fill: #C7F0E6
  &:hover
    circle
      transform: scale(1.2, 1.2)

line.link
  fill: #BDC3C7
  &.faded
    stroke: #ECF0F1
    stroke-dasharray: 0,2 1

.edit-in-place
  .edit-in-place-input
    border: none
    font-family: "Helvetica Neue",Helvetica,Arial,sans-serif
    padding: 6px 8px
    font-size: 13px
    border-radius: 3px
    width: 187px
  .edit-in-place-trigger
    &:before
      content: "\f040"
    [class^="icon-"]:before, [class*=" icon-"]:before
      text-decoration: inherit
      display: inline-block
      speak: none
    display: inline
    width: auto
    height: auto
    line-height: normal
    vertical-align: baseline
    margin-top: 0
    font-family: FontAwesome
    font-weight: normal
    font-style: normal
    text-decoration: inherit
    -webkit-font-smoothing: antialiased
    font-size: 16px

    cursor: pointer
    position: absolute
    right: 42px
    top: 11px

select
  width: 120px;
  background-color: #ffffff;
  font-family: "Helvetica Neue",Helvetica,Arial,sans-serif;
