@import 'variables'
@import 'nib'
@import 'mixins'



.view-result
  article.help
    background-color #fdfcf3
    padding 0
    padding-left 1em
    margin 0
    h1, h2, h3, h4, h5, dt
      background none
      display inline
      padding 0
    h1
      font-size: 12pt
    dt 
      float left
    dd
      display inline
    figure  {
      display: block;
      margin-before: 1em;
      margin-after: 1em;
      margin-start: 40px;
      margin-end: 40px;
    }
    figcaption {
      padding: 5px;
      font-size: 1em;
      font-style: italic
      font-weight: 300;
      border: none;
      background: transparent;
      word-wrap:normal;
      text-align: center;
    }
