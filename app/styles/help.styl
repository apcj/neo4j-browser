@import 'variables'
@import 'nib'
@import 'mixins'


#stream .view-result
  article.help
    background-color #fff
    padding 0
    padding: 30px
    margin 0
    [help-topic]
      font-family: mono-font-family;
      font-size: 12px;
      margin-right: 5px;
    p
      font-size: 15px
      line-height: 23px
      color: #666
    h1, h2, h3, h4, h5, dt
      background none
      display inline
      padding 0
    h2 span
      display block
      font-size 12pt
      font-style italic
    figure  {
      display: block;
      margin: 0;
      margin-top: 16px;
    }
    figcaption {
      padding: 5px;
      font-size: 1em;
      font-style: italic
      font-weight: 300;
      border: none;
      background: transparent;
      word-wrap:normal;
      text-align: center;
    }
    pre.code
      background: #F3F3F3
      cursor: pointer
    &.manual
      section
      h1
        font-size 12pt
      h1 span
        display block
