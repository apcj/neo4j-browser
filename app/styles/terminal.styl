stretch()
  position absolute
  top 0
  left 0
  right 0
  bottom 0

.terminal .terminal-output .format, .terminal .cmd .format,
.terminal .cmd .prompt, .terminal .cmd .prompt div, .terminal .terminal-output div div
  display inline-block

.terminal
  stretch()
  margin-top: 100px
  padding 10px 39px
  overflow hidden
  font-family FreeMono, monospace
  color #aaa
  background-color #000
  font-size 12px
  line-height 14px
  .clipboard
    position absolute
    bottom 0
    left 0
    opacity 0.01
    width 2px
  .prompt
    float left
  .terminal-output
    div
      span
        display inline-block
  .cmd
    span
      float left
      &.inverted
        background-color #aaa
        color #000
  a
    color #0F60FF
    &:hover
      color red

.cmd
  padding 0
  margin 0
  height 1.3em
  margin-top 3px
  & > .clipboard
    position fixed

.terminal .terminal-output div div, .terminal .prompt
  display block
  line-height 14px
  height auto

.terminal-output
  & > div
    padding-top 3px

.terminal .terminal-output div div::-moz-selection,
.terminal .terminal-output div span::-moz-selection,
.terminal .terminal-output div div a::-moz-selection
  background-color #aaa
  color #000

.terminal .terminal-output div div::selection,
.terminal .terminal-output div div a::selection,
.terminal .terminal-output div span::selection,
.terminal .cmd > span::selection,
.terminal .prompt span::selection
  background-color #aaa
  color #000

.terminal .terminal-output div.error, .terminal .terminal-output div.error div
  color red

.tilda
  position fixed
  top 0
  left 0
  width 100%
  z-index 1100

.clear
  clear both

