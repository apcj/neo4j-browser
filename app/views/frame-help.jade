.code-bar
  .label.label-info Help
  span.code {{frame.input | uncomment}}
  .actions
    a.icon-fullscreen(ng-click="fullscreen = !fullscreen", tooltip-placement='bottom', tooltip='Fullscreen')
    span.divider &nbsp;
    a.icon-trash(ng-click='destroyFrame(frame)', tooltip-placement='bottom', tooltip='Remove')

.inner
  .view-result.help(ng-hide='frame.hasErrors', ng-include = 'frame.response.page')

  .status-bar.error(ng-show='frame.hasErrors')
    div
      span
        .icon-warning-sign
        {{frame.errorText}}
