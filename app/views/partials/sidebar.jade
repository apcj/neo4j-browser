#sidebar(ng-switch on="whichSidebar")
  div(ng-switch-when="scripts")
    h4 Saved scripts
      a.create-folder(ng-click='createFolder()', tooltip-placement='bottom', tooltip='Create folder')
        .icon-plus-sign-alt
    .inner
      .droppable(
        ng-repeat='folder in folders.all()', ui-sortable="sortableOptions")
        h5.folder(ng-click='toggleFolder(folder)')
          i.icon-caret-right(ng-class="{'icon-rotate-90': folder.expanded}")
          div(edit-in-place='folder.name', on-blur='persistFolders()')
          a.icon-trash(ng-click='removeFolder(folder)', tooltip-placement='left', tooltip='Remove folder')
        ul.starred.indented(ng-show='folder.expanded')
          li(ng-repeat="document in documents.where({folder: folder.id})", ng-animate="{leave:'pop-out', enter:'pop-in'}")
            include list-item
      .droppable(ui-sortable="sortableOptions")
        ul.starred
          li(ng-repeat="document in documents.where({folder: false})")
            include list-item
      file-upload(upload="importDocument($content)", type='text')
        | Drop Cypher script file to import
  div(ng-switch-when="info")
    h4 Learn
  div(ng-switch-when="database")
    h4 Database
    .inner
      h5 Labels
        span.count  (17 462)
      a.badge(ng-click="editor.execScript('MATCH n RETURN n LIMIT 25')") *
      span(ng-repeat='node in labels | limitTo:16')
        a.badge(ng-click="editor.execScript('MATCH (n:'+node+') RETURN n LIMIT 25')") {{node}}

      h5 Relationships
        span.count  (10 219)
      a.label.relationship(ng-click="editor.execScript('MATCH (a)-[r]-(b) RETURN a,b LIMIT 25')") {{relationship}} *
      span(ng-repeat='relationship in relationships | limitTo:16')
        a.label.relationship(ng-click="editor.execScript('MATCH (a)-[:'+relationship+']->(b) RETURN a,b LIMIT 25')") {{relationship}}

      h5 Server
      ul
        li.pair
          .key Database:
          .value {{kernel.store_dir}}
        li.pair
          .key Location:
          .value {{kernel.StoreDirectory}}
        li.pair
          .key Memory:
          .value {{kernel.all_stores_total_mapped_memory_size}}

  div(ng-switch-default)
    h4 Super secret sidebar. Shh!!
