.inner(ng-switch='popupContent')
  div(ng-switch-when='about')
    h3 Neo4j Community
      .version {{server.neo4j_version}}

    .main
      ul.stats
        li
          .key hostname
          .value {{host}}
        li
          .key database
          .value local.graphdb
        li
          .key store location
          .value /Users/batman/local.graphdb

      ul.stats
        li
          .key disk
          .value 500Gb
        li
          .key memory
          .value 512Mb

      .button.secondary Configuration
      .button.secondary(ng-click='togglePopup("details")') System Report

    .footer
      .license
        | License GPLv3
        | Copyright 2013 Neo Technology
      .button.secondary Details
  div(ng-switch-when='details', ng-init='setPopupStyle("large")')
    h3 System details
