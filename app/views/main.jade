nav.top-bar
  ul.title-area
    li.name
      h1
        a Neo4j Browser
  section.top-bar-section
    ul.left
      li
        a(ng-click='execute()')
          .icon.menu-plus
          | New

    ul.right

      li
        .icon.history(ng-click='toggleHistory()')

#history
  .icon.close-history('ng-click'="toggleHistory()")
  h3 Views
  h4 Saved
  ul.starred
    li('ng-repeat' = "view in views.history | filter:{starred:true}", 'ng-class'='{error: view.response.isError}', 'ng-animate'=" 'animate' ")
      a.star('ng-click'="view.toggleStar()")
      a('ng-click'="toggleHistory()")
        {{view.response.input | autotitle}}
  h4 Unsaved
  ul
    li('ng-repeat' = 'view in views.history | filter:{starred:false}', 'ng-class'='{error: view.response.isError}', 'ng-animate'=" 'animate' ")
      a.star('ng-click'="view.toggleStar()")
      a('ng-click'="views.select($index)")
        {{view.response.input | autotitle}}

#views
  #view-background
  .view('ng-repeat' = 'view in views.history', 'ng-show' = 'view.id == views.current.id')
    .view-editor
      a.handle('ng-click'="toggleEditor()")
      textarea('ui-codemirror'="{theme: 'neo'}", 'ng-model'='view.input')
      .update-button.button.right('ng-click' = 'view.exec()') Execute

    visualization.view-result(query='view.response.input')
      .status-bar Returned <b>{{result.nodes.length}} nodes</b> in <b>Y ms</b>
      .split-pane
        .view-result-graph
          .icon.expand('ng-click'="toggleGraph()", 'ng-class'='{restore: isGraphExpanded}')
          .icon.download
          neo-graph
        .view-result-table
          .icon.download
          .icon.expand('ng-click'="toggleTable()", 'ng-class'='{restore: isTableExpanded}')
          neo-table
